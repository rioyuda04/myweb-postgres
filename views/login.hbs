<!DOCTYPE html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="assets/css/myproject.css">
</head>
<body class="bg">
    {{!-- call navbar --}}
    {{> navbar}}
    {{!-- end --}}
    {{#if messages.success }}
    <div class="alert alert-success text-center" role="alert">
        {{ messages.success }}
    </div>
    {{/if}}
    {{#if messages.error }}
    <div class="alert alert-danger text-center" role="alert">
        {{ messages.error }}
    </div>
    {{/if}}
    <!-- Page Add My Project -->
    <div class="d-flex w-100 justify-content-center py-5">
        <form class="d-flex w-50 h-auto flex-wrap align-items-center gap-4"
            action="/login" method="POST">
            
            <h3 class="text-uppercase d-flex w-100 justify-content-center">Login Your Account</h3>
            <!-- input project name -->
            <div class="form-group d-flex w-100 flex-wrap">
                <label for="email">Email</label>
                <input name="email" type="text" class="form-control shadow" id="email">
            </div>
            <div class="form-group d-flex w-100 flex-wrap">
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control shadow" id="password">
            </div>
            <!-- button submit -->
            <div class="d-flex w-100 justify-content-end">
                <button type="submit" class="btn btn-outline-dark">submit</button>
            </div>
        </form>
    </div>
    <!-- End -->

</body>
</html>